            <% end %>
          </li>
      <% end %>
      <li><h3>Držitelé práv</h3>
        <% for user in @diplomate do %>
          <li>
            <%= link_to user.nick, user, :class => "diplomat" %>
            <% if can? :odeber_pravo, User %>
